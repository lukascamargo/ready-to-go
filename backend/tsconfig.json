{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "outDir": "./dist",
      "baseUrl": "./lib",
      "rootDir": "./lib",
      "removeComments": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "paths": {
        "@routes/*" : ["routes/*"],
        "@config/*" : ["config/*"],
        "@service/*": ["service/*"],
        "@controller/*": ["controller/*"],
        "@schema/*": ["schema/*"]
      }
  },
  "include": [
      "lib/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}